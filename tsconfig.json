{
  "compilerOptions": {
    "outDir": "./app/assets/javascripts/bundles",
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es6",
    "jsx": "react",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["types", "node_modules/@types"],
    "lib": ["dom", "esnext"],
    "esModuleInterop": true
  },
  "include": [
    "additional.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
